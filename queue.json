{
    "type": "AdaptiveCard",
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "Image",
                                    "url": "https://mad.kiwi/madhaus/mike.png",
                                    "altText": "php from madkiwi's madhaus icon"
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "wrap": true,
                                    "style": "heading",
                                    "text": "Madkiwi's Madhaus",
                                    "fontType": "Monospace",
                                    "color": "Dark"
                                },
                                {
                                    "type": "ColumnSet",
                                    "columns": [
                                        {
                                            "type": "Column",
                                            "width": "auto",
                                            "items": [
                                                {
                                                    "type": "Image",
                                                    "url": "https://madkiwi.ca/purplemonkeydishwasher/media/img/kiwiLove.png"
                                                }
                                            ]
                                        },
                                        {
                                            "type": "Column",
                                            "width": "stretch",
                                            "items": [
                                                {
                                                    "type": "TextBlock",
                                                    "text": "You Are Waiting In Queue:",
                                                    "wrap": true,
                                                    "color": "Dark"
                                                },
                                                {
                                                    "type": "TextBlock",
                                                    "text": "In Queue [ 0 ] \n Position [ 0 ]",
                                                    "wrap": true,
                                                    "color": "Dark"
                                                },
                                                {
                                                    "type": "TextBlock",
                                                    "text": "Time In Queue: [0:00:00]",
                                                    "wrap": true,
                                                    "color": "Dark"
                                                },
                                                {
                                                    "type": "TextBlock",
                                                    "wrap": true,
                                                    "color": "Dark",
                                                    "text": "Thanks for being Patient!"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ],
                            "backgroundImage": {
                                "url": "https://madkiwi.ca/purplemonkeydishwasher/media/img/Blank720.png"
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "backgroundImage": {
        "url": "https://madkiwi.ca/purplemonkeydishwasher/media/img/smallbg.png"
    }
}